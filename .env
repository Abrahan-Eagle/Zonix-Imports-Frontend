# ZONIX-IMPORTS - Configuración de Entorno
# ==========================================

# API URLs
API_URL_LOCAL=http://192.168.27.11:8000
API_URL_PROD=https://imports.aiblockweb.com

# WebSocket Configuration - Laravel Echo Server
WS_URL_LOCAL=ws://192.168.27.11:6001
WS_URL_PROD=wss://imports.aiblockweb.com

# Echo Server Configuration
ECHO_APP_ID=zonix-eats-app
ECHO_KEY=zonix-eats-key
ENABLE_WEBSOCKETS=true

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firebase Configuration (si usas notificaciones push)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Configuración de la aplicación
APP_NAME=ZONIX-IMPORTS
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Configuración de paginación
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Configuración de timeouts (en milisegundos)
CONNECTION_TIMEOUT=30000
RECEIVE_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Configuración de reintentos
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Configuración de desarrollo
DEBUG_MODE=true
LOG_LEVEL=debug
